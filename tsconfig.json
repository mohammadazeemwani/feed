{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strict": true,
    "target": "ESNext",
    "verbatimModuleSyntax": false
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "lib", "src/__tests__/**/*"]
}
